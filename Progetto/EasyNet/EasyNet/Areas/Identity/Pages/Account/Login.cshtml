@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/signin.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container" id="container">
    <div class="form-container sign-in-container">
        <form id="account" method="post">
            <h1>Accedi</h1>
            <div class="social-container">
                <a href="#" class="social"><i class="bi bi-facebook"></i></a>
                <a href="#" class="social"><i class="bi bi-google"></i></a>
            </div>
            <span>Accedi con il tuo account</span>
            <input asp-for="Input.Email" type="email" style="margin: 8px 0" placeholder="Email" />
            <input asp-for="Input.Password" type="password" style="margin: 8px 0" placeholder="Password" />
            <a id="forgot-password" asp-page="./ForgotPassword">Password dimeticata?</a>            
            <button>Accedi</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Bentornato!</h1>
                <p>Per restare connesso con noi effettua il login con i tuoi dati personali</p>
                <button class="ghost" id="signIn">Accedi</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Benvenuto in EsyNet</h1>
                <p>Non hai ancora un account? Creane subito uno:</p>
                <a id="forgot-password" asp-page="./Register">Registrati</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
