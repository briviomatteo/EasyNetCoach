@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link rel="stylesheet" href="~/css/signin.css" />
<link rel="stylesheet" href="~/css/site.css" />

<div class="container" id="container">
    <div class="form-container sign-up-container p-3">
        <form action="#">
            <h1>Create Account</h1>
            <div class="social-container">
                <a href="#" class="social"><ion-icon name="logo-facebook"></ion-icon></a>
                <a href="#" class="social"><ion-icon name="logo-google"></ion-icon></a>
            </div>
            <span>or use your email for registration</span>
            <panel style="overflow: scroll; height: 70%;">

                <input type="text" style="margin: 8px 0" placeholder="Nome" />
                <input type="text" style="margin: 8px 0" placeholder="Cognome" />
                <input type="text" style="margin: 8px 0" placeholder="Username" />
                <input type="email" style="margin: 8px 0" placeholder="Email" />
                <input type="password" style="margin: 8px 0" placeholder="Password" />
                <input type="date" style="margin: 8px 0" placeholder="DataNascita" />
                <input type="file" style="margin: 8px 0" placeholder="Foto Profilo" />

            </panel>
            <button style="margin-bottom: 20px;">Sign Up</button>
        </form>
    </div>
    <div class="form-container sign-in-container">
        <form action="#">
            <h1>Sign in</h1>
            <div class="social-container">
                <a href="#" class="social"><ion-icon name="logo-facebook"></ion-icon></a>
                <a href="#" class="social"><ion-icon name="logo-google"></ion-icon></a>
            </div>
            <span>or use your account</span>
            <input type="email" style="margin: 8px 0" placeholder="Email" />
            <input type="password" style="margin: 8px 0" placeholder="Password" />
            <a href="#">Forgot your password?</a>
            <button>Sign In</button>
        </form>
    </div>
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>To keep connected with us please login with your personal info</p>
                <button class="ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Welcome To NomeSito</h1>
                <p>Enter your personal details and start journey with us</p>
                <button class="ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>
<script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container');

    signUpButton.addEventListener('click', () => {
        container.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
        container.classList.remove("right-panel-active");
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
