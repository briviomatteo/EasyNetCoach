@{
    ViewData["Title"] = "Bot Telegram";
}

<link rel="stylesheet" href="~/css/Home.css" />
<div class="section">
    <div class="center">
        <main>
            <form id="form">
                <div class="form-group">
                    <label>Inserire la domanda da porre al bot:</label>
                    <input type="text" class="form-control" id="text1">
                    <br />
                </div>
                <button type="submit" id="submit" class="btn btn-dark">Invia</button>
            </form>
            <hr>
            <div class="row">
                <div class="col">
                    <a type="button" asp-area="User" asp-controller="Home" asp-action="Index" class="btn btn-dark" style="width: 100%;"><i class="bi bi-arrow-return-left"></i></a>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts{
    <script src="~/js/form.js" asp-append-version="true"></script>
}